{
  "name": "blackjack",
  "version": "1.0.0",
  "homepage": "http://fakemetalfan.github.io/blackjack/",
  "scripts": {
    "start": "webpack serve --mode development --open",
    "lint:scripts": "eslint --ignore-pattern '/node_modules/' --ignore-pattern '/build/' . --fix",
    "lint:styles": "npx stylelint src/**/*.scss --fix",
    "prettify": "prettier --write .",
    "test": "jest",
    "code-coverage": "jest --coverage",
    "build": "webpack --mode production",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "author": "FakeMetalFan",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/dom": "^7.31.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "css-loader": "^5.2.4",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^6.0.0",
    "prettier": "^2.3.0",
    "sass-loader": "^11.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.1.2",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "prettier": {
    "printWidth": 80,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base/legacy",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "import",
      "prettier",
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".ts"
          ],
          "paths": [
            "./src"
          ]
        },
        "typescript": {}
      }
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "endOfLine": "auto"
        }
      ],
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "import/extensions": "off",
      "import/prefer-default-export": "error",
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "error"
      ],
      "@typescript-eslint/member-ordering": [
        "error"
      ],
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-scss"
    ],
    "rules": {
      "indentation": 2,
      "number-leading-zero": null,
      "color-named": "always-where-possible",
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-alphabetical-order": true,
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "max-nesting-depth": null
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts)": [
      "npm run lint:scripts",
      "git add"
    ],
    "*.+(scss)": [
      "npm run lint:styles",
      "git add"
    ],
    "*.+(json|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleNameMapper": {
      "^buttons/(.*)": "<rootDir>/src/scripts/buttons/$1",
      "^cardHolders/(.*)": "<rootDir>/src/scripts/cardHolders/$1",
      "^constants/(.*)": "<rootDir>/src/scripts/constants/$1",
      "^utils/(.*)": "<rootDir>/src/scripts/utils/$1",
      "^blackjack": "<rootDir>/src/scripts/blackjack",
      "^card": "<rootDir>/src/scripts/card",
      "^popup": "<rootDir>/src/scripts/popup"
    },
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "verbose": true
  }
}
